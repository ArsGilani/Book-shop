<div class="container">
	<h1>Book</h1>
	<%= link_to 'New Book', new_book_path %>
	<table class="table table-striped">
		<tr>
			<th>Picture</th>
			<th>Title</th>
			<th>Description</th>
			<th>Price</th>
			<th>Actions</th>
		</tr>
		<% @books.each do |book| %>
		<tr>
			<td><%= image_tag "/uploads/books/#{book.id}", size: '100' %></td>	
			<td><%= book.title %></td>
			<td><%= book.description %></td>
			<td><%= book.price %></td>
			<td class="td_link">
				<%= link_to 'View', book_path(book), class: "btn btn-default" %>
				<%= link_to 'Edit', edit_book_path(book), class: "btn btn-default" %>
				<%= link_to 'Delete', book_path(book),class: "btn btn-default",
					method: :delete,
					data: {confirm: 'Do you want to remove this book?'}
				 %>
			</td>
		</tr>
		<% end %>
	</table>
</div>