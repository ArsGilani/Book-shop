<div class="container">
	
	<% if @book.errors.any? %>
		<div class="errors">
			Total errors: <%= @book.errors.count %>
			<ul>
				<% @book.errors.full_messages.each do |message| %>
				<li><%= message %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
	<%= form_for @book do |f| %>
		<div class="form-group">
			<div>
				<%= f.label :title %><br>
				<%= f.text_field :title %>
			</div>

			<div>
				<%= f.label :description %><br>
				<%= f.text_area :description %>
			</div>
			<div>
				<%= f.label :author %><br>
				<%= f.collection_select :author_id, Author.all, :id, :title %><br>
			</div>
			<div>
				<%= f.label :genre %><br>
				<%= f.collection_select :genre_id, Genre.all, :id, :title %><br>
			</div>
			<div>
				<%= f.label :price %><br>
				<%= f.text_field :price %>
			</div>
			<div>
				<%= f.label :picture %><br>
				<%= f.file_field :picture %><br>
			</div>
			<div>
				<%= f.submit %>
			</div>
		</div>
	<% end %>
</div>