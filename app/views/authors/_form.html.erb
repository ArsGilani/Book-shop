<div class="container">
	
	<% if @author.errors.any? %>
		<div class="errors">
			Total errors: <%= @author.errors.count %>
			<ul>
				<% @author.errors.full_messages.each do |message| %>
				<li><%= message %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
	<%= form_for @author do |f| %>
		<div class="form-group">
			<div>
				<%= f.label :title %><br>
				<%= f.text_field :title %>
			</div>

			<div>
				<%= f.label :description %><br>
				<%= f.text_area :description %>
			</div>
			<div>
				<%= f.label :picture %><br>
				<%= f.file_field :picture %><br>
			</div>
			<div>
				<%= f.submit %>
			</div>
		</div>
	<% end %>
</div>